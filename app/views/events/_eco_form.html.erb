<div class="row">
  <div class="form-actions col-xs-5 col-xs-offset-1">
    <!-- Define time -->
    <%= f.input :time %>
  </div>

  <div class="form-actions col-xs-5 select_player">
    <!-- Pick player -->
    <select name="event[player_ids][]" id="event_player_ids" class="form-control">
      <option value="">Select player</option>
      <% @match.participants.each do |participant| %>
        <option value=<%=participant.player.id%>><%=participant.player.name%></option>
      <% end %>
    </select>
  </div>
</div>