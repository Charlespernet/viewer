<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Event Creation</h1>

      <%= simple_form_for([@match, @event], html: { multipart: true }) do |f| %>
        <!-- select category -->
        <div id='category'>
          <%= f.input :category %>
        </div>

        <div class='hidden' id='eco'>
          <%= render 'eco_form', f: f %>
        </div>

        <div id="techno">
          <%= render 'techno_form', f: f %>
        </div>

        <%= f.button :submit, class: 'btn btn-danger btn-lg' %>

      <% end %>
    </div>
  </div>
</div>

