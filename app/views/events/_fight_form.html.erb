<!-- Define time -->
<%= f.input :time %>

<!-- Pick player -->
<div class="container text-center">
  <div class="row">
    <div class="col-xs-6">
      <%= @match.participants[0].player.name %>
      <div class="form-group select optional event_unit">
        <label class="select optional control-label" for="event_unit">Unit</label>
        <select name="event[unit]" id="event_unit" class="select optional form-control">
          <% @match_units.each do |unit| %>
            <option value=<%=unit.id%> data-race=<%= unit.race_id %>><%=unit.name%></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="col-xs-6">
      <%= @match.participants[1].player.name %>
      <div class="form-group select optional event_unit">
        <label class="select optional control-label" for="event_unit">Unit</label>
        <select name="event[unit]" id="event_unit" class="select optional form-control">
          <% @match_units.each do |unit| %>
            <option value=<%=unit.id%> data-race=<%= unit.race_id %>><%=unit.name%></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>
</div>




