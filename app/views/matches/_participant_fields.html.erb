<div class="nested-fields">
  <div class="container">
    <div class="row">
      <div class="form-actions col-xs-5">
        <%= f.association :player, collection: @players, label: "Pick a player" %>
      </div>
      <div class="form-actions col-xs-5 col-xs-offset-1">
        <%= f.association :race, collection: @races %>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col-xs-12">
        <%= f.input :winner, as: :radio_buttons %>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col-xs-12">
        <%= link_to_remove_association "remove participant", f %>
      </div>
    </div>
</div>
