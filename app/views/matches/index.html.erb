<div class="container text-center">

  <div class="vertical-spacer"></div>

  <div class="btn btn-default">
    <%= link_to "Add a match", new_match_path %>
  </div>

  <div class="row">
    <% @matches.each do |match| %>
    <div class="col-xs-12 col-md-4 content">
      <h3 class="text-center"><%= link_to "#{match.name}", match_path(match) %></h3>
        <p class="text-center">
          <%= match.participants[0].player.name %> - <%= match.participants[0].race.name %>
          VS
          <%= match.participants[1].player.name %> - <%= match.participants[1].race.name %>
        </p>
      <%= image_tag(match.map.picture.url, size: '150') %>
      <p><%= match.map.name %></p>
      <p>Description: <%= match.description %></p>
    </div>
    <% end %>
  </div>
</div>